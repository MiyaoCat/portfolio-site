<%- include('header.ejs') %>
<h1 class="screaming-voice">Athletes</h1>

<div class="card-grid">
	<% athletes.forEach( function(athlete) { %>
	<athlete-card>
		<div class="card">

			<div class="front">
				<div class="athlete-info">
					<picture class="headshot">
						<img src="<%=athlete.headshot%>" alt="">
					</picture>
					<picture class="action-shot">
						<img src="<%=athlete.actionShots%>" alt="">
					</picture>
					<h3 class="name attention-voice"><%=athlete.name%></h3>
					<p class="position normal-voice"><%=athlete.position%></p>
					<p class="years normal-voice"><%=athlete.yearStarted%> - <%=athlete.yearEnded%></p>
					
				</div>
			</div>
			
			<div class="back">				
				<picture class="headshot">
					<img src="<%=athlete.headshot%>" alt="">
				</picture>
				<h3 class="name attention-voice"><%=athlete.name%></h3>
				<div class="personal-info">
					<p class="calm-voice"><strong>Born:</strong> <%=athlete.birthDate%></p>
					<p class="calm-voice"><strong>Height:</strong> <%=athlete.height%></p>
					<p class="calm-voice"><strong>Weight:</strong> <%=athlete.weight%></p>
					<p class="calm-voice"><strong>Drafted:</strong> Round <%=athlete.draftRound%> - Pick <%=athlete.draftPick%> (<%=athlete.overrall%> Overrall)</p>
				</div>

				<div class="college">
					<%-athlete.collegeStats%>
					<%-athlete.summary%>
				</div>
			</div>
		</div>

		<a href="">More Info</a>
	</athlete-card>

	<%});%>
</div>
<%- include('footer.ejs') %>